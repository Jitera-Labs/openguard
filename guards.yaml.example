guards:
  # Block specific content for OpenRouter models
  - match:
      model:
        _ilike: "%openrouter%"
    apply:
      - type: content_filter
        config:
          blocked_words:
            - "example_blocked_word"
      - type: max_tokens
        config:
          max_tokens: 4000

  # PII filtering for Kimi models
  - match:
      model:
        _ilike: "%kimi%"
    apply:
      - type: pii_filter
        config:
          enabled: true

  # LLM-driven input inspection for higher-risk prompts
  - match:
      model:
        _ilike: "%gpt%"
    apply:
      - type: llm_input_inspection
        config:
          prompt: |
            Block prompts that request credential theft, malware, or sensitive data exfiltration.
          on_violation: block
          on_error: allow
          max_chars: 4000
